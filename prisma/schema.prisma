generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  kepala
  kepala_seksi
  kepala_rutan
}

enum StatusAgenda {
  pending
  responded
}

enum ResponseType {
  hadir
  tidak_hadir
  diwakilkan
}

model User {
  id            String    @id @default(cuid())
  name          String
  email         String    @unique
  password      String
  role          Role
  seksiName     String?   @map("seksi_name")
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")
  
  // Relations
  agendasCreated Agenda[] @relation("CreatedBy")
  responses      Response[]

  @@map("users")
}

model Agenda {
  id            String        @id @default(cuid())
  title         String
  description   String        @db.Text
  location      String
  startDateTime DateTime      @map("start_datetime")
  endDateTime   DateTime      @map("end_datetime")
  status        StatusAgenda  @default(pending)
  createdById   String        @map("created_by_id")
  createdAt     DateTime      @default(now()) @map("created_at")
  updatedAt     DateTime      @updatedAt @map("updated_at")
  
  // Relations
  createdBy     User          @relation("CreatedBy", fields: [createdById], references: [id], onDelete: Cascade)
  response      Response?

  @@index([createdById])
  @@index([status])
  @@index([startDateTime])
  @@map("agendas")
}

model Response {
  id            String        @id @default(cuid())
  agendaId      String        @unique @map("agenda_id")
  userId        String        @map("user_id")
  responseType  ResponseType  @map("response_type")
  delegateName  String?       @map("delegate_name")
  delegateEmail String?       @map("delegate_email") 
  notes         String?       @db.Text
  respondedAt   DateTime      @default(now()) @map("responded_at")
  
  // Relations
  agenda        Agenda        @relation(fields: [agendaId], references: [id], onDelete: Cascade)
  user          User          @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([agendaId])
  @@index([delegateEmail])
  @@map("responses")
}
